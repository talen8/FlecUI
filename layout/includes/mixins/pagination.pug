nav#pagination
    div.pagination
        - var options = {mid_size: 1,escape: false,next_text: `<div class="pagination_tips_next">${_p("pagination.next")}</div> <i class="flecicon flec-right-one-arrow-line"></i>`,prev_text: `<i class="flecicon flec-left-one-arrow-line"></i> <div class="pagination_tips_prev">${_p("pagination.prev")}</div>`}
        !=paginator(options)
        div.toPageGroup
            input#toPageText(oninput="value=value.replace(/[^0-9]/g,'')" maxlength="3" title=_p('pagination.to') onkeyup="if (this.value === '0') this.value = ''")
            a#toPageButton(onclick="flec.toPage()")
                i.flecicon.flec-right-two-arrow-line
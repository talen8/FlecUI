.webinfo
    if theme.aside.siteinfo.postcount
        .webinfo-item
            .webinfo-item-title
                i.item-icon.flecicon.flec-folder-fill
                .item-name= __('aside.postcount')
            .item-count= site.posts.length
    if theme.busuanzi
        if theme.aside.siteinfo.pv
            .webinfo-item
                .webinfo-item-title
                    i.item-icon.flecicon.flec-visitor-fill
                    .item-name= __('aside.pv')
                
                span#busuanzi_value_site_pv
                    i.flecicon.flec-loading-line
        if theme.aside.siteinfo.uv
            .webinfo-item
                .webinfo-item-title
                    i.item-icon.flecicon.flec-team-fill
                    .item-name= __('aside.uv')
                span#busuanzi_value_site_uv
                    i.flecicon.flec-loading-line
    if theme.aside.siteinfo.runtimeenable
        .webinfo-item
            .webinfo-item-title
                i.item-icon.flecicon.flec-calendar-todo-fill
                .item-name= __('aside.runtime')
            .item-count#runtimeshow
    if theme.aside.siteinfo.updatetime
        .webinfo-item
            .webinfo-item-title
                i.item-icon.flecicon.flec-refresh-line
                .item-name= __('aside.updatetime')
            time.item-count(datetime=new Date())
    if theme.wordcount && theme.aside.siteinfo.wordcount
        .webinfo-item
            .webinfo-item-title
                i.item-icon.flecicon.flec-file-word-fill
                .item-name= __('aside.wordcount')
            .item-count= totalcount(site)
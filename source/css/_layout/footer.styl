#footer
  position relative
  background linear-gradient(180deg, var(--flec-card-bg-none) 0, var(--flec-card-bg) 25%)
  display flex
  flex-direction column
  margin-top .5rem

  +maxWidth768()
    margin-top 0

  &:before
    position absolute
    width 100%
    height 100%
    content ''
    z-index -1

  #footer_deal
    justify-content center
    display flex
    padding-top 2rem
    align-items center

    +maxWidth768()
      flex-wrap wrap
      flex-direction row

    i
      font-size .9rem
      line-height .9rem
      height .9rem

    .deal_link
      display flex
      margin 1rem 27px
      color var(--flec-card-bg)
      border-radius 3rem
      width 32px
      height 32px
      background var(--flec-fontcolor)
      justify-content center
      align-items center
      transition .3s

      &:hover
        color var(--flec-white)
        background var(--flec-main)
        transform scale(1.1)

    if hexo-config('footer.information.author.enable')
      .footer_mini_logo
        width 50px
        height 50px
        margin 0 1rem
        cursor pointer
        transition cubic-bezier(0, 0, 0, 1.29) .5s
        user-select none
        border-radius 50px
        overflow hidden
        +maxWidth768()
          display none

        &:hover
          transform scale(1.2)

  #st-footer
    display flex
    flex-direction row
    width 100%
    max-width 1200px
    justify-content space-between
    flex-wrap wrap
    margin 1rem auto 3rem
    padding 0 1rem

    .footer-links
      display flex
      flex-direction column

    .footer-item
      font-size .8rem
      line-height .8rem
      color var(--flec-fontcolor)
      margin-right auto
      overflow hidden
      white-space nowrap
      text-overflow ellipsis
      max-width 120px
      cursor pointer
      padding 8px
      border-radius 12px

      &:hover
        color var(--flec-theme)
        background var(--flec-main-op-light)

        [data-theme=dark] &
          background var(--flec-theme-op)

    .footer-group
      min-width 120px

    .footer-title-group
      display flex
      align-items center
      margin .5rem 0 .7rem 8px

      a
        margin-left 8px

        &:hover i
          color var(--flec-main)
          opacity 1

      i
        line-height 1
        color var(--flec-secondtext)
        transition .3s
        font-size 16px
        opacity .6

      .footer-title
        margin 0

    .footer-title
      color var(--flec-secondtext)
      font-size .8rem
      margin-left 8px

    .random-friends-btn
      display flex
      margin-left 8px

  /#footer-bar
    padding 1rem
    color var(--flec-fontcolor)
    margin-top 1rem
    background var(--flec-secondbg)
    display flex
    overflow hidden
    z-index 1
    transition .3s
    border-top var(--style-border-always)

    .footer-bar-links
      display flex
      justify-content space-between
      max-width 1400px
      width 100%
      margin 0 auto
      flex-wrap wrap
      align-items center
      line-height 1

    .footer-bar-left
      display flex
      flex-wrap wrap
      min-height 32px
      align-items center

      .copyright
        display flex
        flex-direction row
        align-items center
        padding 0 8px
        margin 0 4px

        .footer-bar-link
          margin 0

    .footer-bar-link
      margin 0 4px
      color var(--flec-fontcolor)
      font-size .8rem
      padding 8px
      border-radius 12px
      font-weight 700
      white-space nowrap

      &.cc
        margin-right 0
        margin-bottom -3px

        i
          font-size 18px

          &:not(:last-child)
            margin-right .5rem

      &:hover
        color var(--flec-theme)
        background var(--flec-main-op)

    .footer-bar-right
      display flex
      flex-direction row
      flex-wrap wrap
      align-items center

    > div > div.footer-bar-left > span
      margin-right 1rem

  #cookies-window
    min-width 300px
    background var(--flec-maskbgdeep)
    color var(--flec-fontcolor)
    padding 8px 16px
    display flex
    flex-direction column
    bottom 20px
    right 20px
    position fixed
    border-radius 12px
    transition .3s
    z-index 8
    user-select none
    backdrop-filter saturate(180%) blur(20px)
    transform translateZ(0)
    border var(--style-border)
    animation barrageIn .6s cubic-bezier(.42, 0, .3, 1.11)

    +maxWidth1300()
      display none

    &.cw-hide
      opacity 0
      animation barrageOut .6s cubic-bezier(.42, 0, .3, 1.11)
      z-index -1

    .cookies-window-title
      padding-bottom 4px
      border-bottom var(--style-border)
      font-size 12px
      font-weight 700

    .cookies-window-content
      font-size 14px
      display flex
      justify-content space-around
      align-items center

      .cookies-link
        margin-left: 10px
        font-size: 16px

        i.flecicon
          font-size 16px
